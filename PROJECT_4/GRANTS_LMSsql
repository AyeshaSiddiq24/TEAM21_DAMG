-- GRANTS FOR LIBRARY_ADMIN_USER
GRANT CREATE SESSION TO LIBRARY_ADMIN_USER;
GRANT CREATE VIEW, CREATE PROCEDURE, CREATE TABLE, CREATE USER, DROP USER TO LIBRARY_ADMIN_USER WITH ADMIN OPTION;

-- Full access to all tables
GRANT SELECT, INSERT, UPDATE, DELETE ON MEMBER TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON CATEGORY TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON PUBLISHER TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON BOOK TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON LOCATION TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON FINE_DUE TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON FINE_PAYMENT TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON LIB_STAFF TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON BOOK_ISSUE TO LIBRARY_ADMIN_USER;
GRANT SELECT, INSERT, UPDATE, DELETE ON AUTHOR TO LIBRARY_ADMIN_USER;

-- Access to views
GRANT SELECT ON Current_Book_Inventory TO LIBRARY_ADMIN_USER;
GRANT SELECT ON Member_Borrowing_History TO LIBRARY_ADMIN_USER;

GRANT SELECT ON Overdue_Books TO LIBRARY_ADMIN_USER;
GRANT SELECT ON Fine_Collection_Status TO LIBRARY_ADMIN_USER;

COMMIT;

-- GRANTS FOR LIBRARY_STAFF_USER
GRANT CREATE SESSION TO LIBRARY_STAFF_USER;

-- Manage books and issues
GRANT SELECT, INSERT, UPDATE ON BOOK TO LIBRARY_STAFF_USER;
GRANT SELECT, INSERT, UPDATE ON BOOK_ISSUE TO LIBRARY_STAFF_USER;

-- Access views related to inventory and staff performance
GRANT SELECT ON Current_Book_Inventory TO LIBRARY_STAFF_USER;


-- Access and update fine details
GRANT SELECT ON FINE_DUE TO LIBRARY_STAFF_USER;
GRANT SELECT, INSERT ON FINE_PAYMENT TO LIBRARY_STAFF_USER;

-- Manage members
GRANT SELECT ON MEMBER TO LIBRARY_STAFF_USER;

COMMIT;

-- GRANTS FOR LIBRARY_MEMBER_USER
GRANT CREATE SESSION TO LIBRARY_MEMBER_USER;

-- View-only access to books and borrowing history
GRANT SELECT ON BOOK TO LIBRARY_MEMBER_USER;
GRANT SELECT ON BOOK_ISSUE TO LIBRARY_MEMBER_USER;

-- Access member-specific views
GRANT SELECT ON Member_Borrowing_History TO LIBRARY_MEMBER_USER;
GRANT SELECT ON Overdue_Books TO LIBRARY_MEMBER_USER;

COMMIT;

-- GRANTS FOR LIBRARY_FINANCE_USER
GRANT CREATE SESSION TO LIBRARY_FINANCE_USER;

-- Manage fines and payments
GRANT SELECT ON FINE_DUE TO LIBRARY_FINANCE_USER;
GRANT SELECT, INSERT, UPDATE ON FINE_PAYMENT TO LIBRARY_FINANCE_USER;

-- Access fine collection status view
GRANT SELECT ON Fine_Collection_Status TO LIBRARY_FINANCE_USER;

COMMIT;

-- GRANTS FOR LIBRARY_ANALYST_USER
GRANT CREATE SESSION TO LIBRARY_ANALYST_USER;

-- Read-only access to all tables
GRANT SELECT ON MEMBER TO LIBRARY_ANALYST_USER;
GRANT SELECT ON CATEGORY TO LIBRARY_ANALYST_USER;
GRANT SELECT ON PUBLISHER TO LIBRARY_ANALYST_USER;
GRANT SELECT ON BOOK TO LIBRARY_ANALYST_USER;
GRANT SELECT ON LOCATION TO LIBRARY_ANALYST_USER;
GRANT SELECT ON FINE_DUE TO LIBRARY_ANALYST_USER;
GRANT SELECT ON FINE_PAYMENT TO LIBRARY_ANALYST_USER;
GRANT SELECT ON LIB_STAFF TO LIBRARY_ANALYST_USER;
GRANT SELECT ON BOOK_ISSUE TO LIBRARY_ANALYST_USER;
GRANT SELECT ON AUTHOR TO LIBRARY_ANALYST_USER;

-- Access all views
GRANT SELECT ON Current_Book_Inventory TO LIBRARY_ANALYST_USER;
GRANT SELECT ON Member_Borrowing_History TO LIBRARY_ANALYST_USER;

GRANT SELECT ON Overdue_Books TO LIBRARY_ANALYST_USER;
GRANT SELECT ON Fine_Collection_Status TO LIBRARY_ANALYST_USER;

COMMIT;
